                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp"
                            android:text="Video Kegiatan"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            app:layout_constraintStart_toEndOf="@+id/cvRadio"
